---
import Layout from "../layouts/Layout.astro";
import Description from "../components/Description.astro";
import PhoneDemo from "../components/PhoneDemo.astro";
---

<Layout title="Chat App">
	<main>
		<div class="content">
			<PhoneDemo />
			<Description />
		</div>
		<div class="attribution">
			Challenge by <a
				href="https://www.frontendmentor.io?ref=challenge"
				target="_blank">Frontend Mentor</a
			>. Coded by <a href="#">Your Name Here</a>.
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 50rem;
	}
	.content {
		position: absolute;
		top: 25%;
		max-width: 50rem;
		display: flex;
		flex-direction: row;
	}
	.attribution {
		font-size: 11px;
		width: 100%;
		text-align: center;
		position: absolute;
		left: 0;
		bottom: 3%;
		margin: auto;
	}
	.attribution a {
		color: hsl(228, 45%, 44%);
	}
</style>
